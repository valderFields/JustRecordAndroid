<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.mango.mobile.paper.modules.myinfo.ChangeDetailsActivity">

    <com.mango.lib_common.viewBySelf.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:id="@+id/ll_change_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.mango.lib_common.viewBySelf.EditTextCustomTF
            android:id="@+id/et_nick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=""
            android:maxLength="20"
            android:textSize="15sp"
            android:padding="17dp"
            android:textColor="@color/text_black"
            android:background="@android:color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <com.mango.lib_common.viewBySelf.EditTextCustomTF
            android:id="@+id/et_ps"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入登录密码"
            android:maxLength="20"
            android:textSize="15sp"
            android:padding="17dp"
            android:textColor="@color/text_black"
            android:background="@android:color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/line"/>
        <com.mango.lib_common.viewBySelf.EditTextCustomTF
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入新手机号"
            android:maxLength="20"
            android:textSize="15sp"
            android:padding="17dp"
            android:textColor="@color/text_black"
            android:background="@android:color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/line"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <com.mango.lib_common.viewBySelf.EditTextCustomTF
                android:id="@+id/et_code"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="请输入验证码"
                android:maxLength="20"
                android:textSize="15sp"
                android:padding="17dp"
                android:textColor="@color/text_black"
                android:background="@android:color/white"/>
            
            <View
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:background="#dddddd"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="114dp"/>
            
            <com.mango.lib_common.viewBySelf.TextViewCustomTF
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_red"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="19dp"
                android:text="获取验证码"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/line"/>
    </LinearLayout>

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/login_btn_bg"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:text="确定"/>
</LinearLayout>
