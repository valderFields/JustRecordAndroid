<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mango.mobile.paper.modules.setting.ChangePasswordActivity">

    <com.mango.lib_common.viewBySelf.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white">
        <com.mango.lib_common.viewBySelf.EditTextCustomTF
            android:id="@+id/et_ps_1"
            android:layout_width="200dp"
            android:layout_height="50dp"
           android:background="@android:color/transparent"
            android:paddingLeft="16dp"
            android:hint="请输入原密码"/>

        <ImageView
            android:id="@+id/iv_eye_1"
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="23dp"
            android:background="@drawable/eye_open_grey"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:visibility="gone">
        <com.mango.lib_common.viewBySelf.EditTextCustomTF
            android:id="@+id/et_ps_2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:paddingLeft="16dp"
            android:hint="请输入新密码"/>

        <ImageView
            android:id="@+id/iv_eye_2"
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="23dp"
            android:background="@drawable/eye_open_grey"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:visibility="gone">
        <com.mango.lib_common.viewBySelf.EditTextCustomTF
            android:id="@+id/et_ps_3"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:paddingLeft="16dp"
            android:hint="请再次输入密码"/>

        <ImageView
            android:id="@+id/iv_eye_3"
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="23dp"
            android:background="@drawable/eye_open_grey"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:id="@+id/tv_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textColor="@color/text_red"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:text="请设置密码(6-16位数字、字母组合)"
        android:visibility="gone"/>

    
    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="70dp"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@drawable/login_btn_bg"/>

</LinearLayout>
