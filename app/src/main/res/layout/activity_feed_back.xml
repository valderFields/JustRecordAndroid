<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mango.mobile.paper.modules.setting.FeedBackActivity">

    <com.mango.lib_common.viewBySelf.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.mango.lib_common.viewBySelf.EditTextCustomTF
        android:id="@+id/et_feedback"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="57dp"
        android:gravity="start"
        android:background="@drawable/feedback_bg"
        android:hint="请输入您的意见或者建议"
        android:textSize="12sp"
        android:padding="11dp"
        android:textColorHint="#888888"/>
    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginTop="175dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26dp"
        android:text="反馈内容需大于4个字，您还可以输入500字"/>
    
    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="244dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/login_btn_bg"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:text="确定"/>
</RelativeLayout>
