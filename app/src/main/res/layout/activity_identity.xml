<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mango.mobile.paper.modules.myinfo.IdentityActivity">

    <com.mango.viewBySelf.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white">
        <com.mango.viewBySelf.TextViewCustomTF
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="姓名"
            android:textColor="@color/text_black"
            android:textSize="15sp" />

        <com.mango.viewBySelf.EditTextCustomTF
            android:id="@+id/et_person_name"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="81dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:background="@android:color/white"
            android:hint="请输入真实姓名（中文）" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white">
        <com.mango.viewBySelf.TextViewCustomTF
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="身份证"
            android:textColor="@color/text_black"
            android:textSize="15sp" />

        <com.mango.viewBySelf.EditTextCustomTF
            android:id="@+id/et_person_num"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="81dp"
            android:layout_centerVertical="true"
            android:background="@android:color/white"
            android:textSize="14sp"
            android:hint="请输入身份证号" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line" />
    </RelativeLayout>

    <com.mango.viewBySelf.TextViewCustomTF
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="41dp"
        android:text="下一步"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@drawable/login_btn_bg"/>
</LinearLayout>
