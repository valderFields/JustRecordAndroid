    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="登录" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/info_head_bg">



        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/setting"/>
        <com.mango.viewBySelf.TextViewCustomTF
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投资总收益"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp"/>
        <com.mango.viewBySelf.TextViewCustomTF
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1224500"
            android:textSize="35sp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="86dp"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:layout_toRightOf="@+id/tv_money"
            android:layout_marginLeft="11dp"
            android:background="@drawable/open_eye"
            android:layout_marginTop="105dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/space"/>

    <com.mango.viewBySelf.ItemBar
        android:id="@+id/ib_invest"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        itembar:left_img="@drawable/invest"
        itembar:left_text="我投资的项目"/>

    <com.mango.viewBySelf.ItemBar
        android:id="@+id/ib_reserve"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        itembar:left_img="@drawable/reserve"
        itembar:left_text="我预购的项目"/>

    <com.mango.viewBySelf.ItemBar
        android:id="@+id/ib_release"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        itembar:left_img="@drawable/release"
        itembar:left_text="我发布的项目"/>

    <com.mango.viewBySelf.ItemBar
        android:id="@+id/ib_follow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        itembar:left_img="@drawable/follow"
        itembar:left_text="我关注的项目"/>

    <com.mango.viewBySelf.ItemBar
        android:id="@+id/ib_discuss"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        itembar:left_img="@drawable/discuss"
        itembar:left_text="我约谈的项目"/>

    <com.mango.viewBySelf.ItemBar
        android:id="@+id/ib_agreement"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        itembar:left_img="@drawable/agreement"
        itembar:left_text="我的合同"/>
    <com.mango.viewBySelf.ItemBar
        android:id="@+id/ib_guide"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        itembar:left_img="@drawable/guide"
        itembar:left_text="新手指引"/>
    <com.mango.viewBySelf.ItemBar
        android:id="@+id/ib_business"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        itembar:left_img="@drawable/business"
        itembar:left_text="运营报告"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/space"/>




</LinearLayout>