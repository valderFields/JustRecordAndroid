<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="手机号"
        android:textColor="@color/text_black"
        android:textSize="15dp" />

    <com.mango.lib_common.viewBySelf.EditTextCustomTF
        android:id="@+id/et_phone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tv_phone"
        android:background="@null"
        android:hint="请输入手机号"
        android:textColor="@color/hint_text"
        android:textColorHint="@color/hint_text"
        android:textSize="14dp" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_phone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/line" />

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="验证码"
        android:textColor="@color/text_black"
        android:textSize="15dp" />

    <com.mango.lib_common.viewBySelf.EditTextCustomTF
        android:id="@+id/et_code"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tv_code"
        android:background="@null"
        android:hint="请输入短信验证码"
        android:textColor="@color/hint_text"
        android:textColorHint="@color/hint_text"
        android:textSize="14dp" />

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:id="@+id/btn_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/line1"
        android:layout_marginRight="19dp"
        android:layout_marginTop="20dp"
        android:text="获取验证码"
        android:textColor="@color/text_red" />

    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_below="@+id/line1"
        android:layout_toLeftOf="@+id/tv_code"
        android:layout_marginRight="19dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/line" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_code"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/line" />

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:id="@+id/tv_set_ps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="设置密码"
        android:textColor="@color/text_black"
        android:textSize="15dp" />

    <com.mango.lib_common.viewBySelf.EditTextCustomTF
        android:id="@+id/et_set_ps"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tv_code"
        android:background="@null"
        android:hint="请设置密码(6-16位数字、字母组合）"
        android:textColor="@color/hint_text"
        android:textColorHint="@color/hint_text"
        android:textSize="14dp" />

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_set_ps"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/line" />

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:id="@+id/tv_re_set_ps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="确认密码"
        android:textColor="@color/text_black"
        android:textSize="15dp" />

    <com.mango.lib_common.viewBySelf.EditTextCustomTF
        android:id="@+id/et_re_set_ps"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tv_code"
        android:background="@null"
        android:hint="请再次输入密码"
        android:textColor="@color/hint_text"
        android:textColorHint="@color/hint_text"
        android:textSize="14dp" />

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_re_set_ps"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/line" />

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/line4"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/login_btn_bg"
        android:gravity="center"
        android:text="同意协议并注册"
        android:textColor="@android:color/white"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/iv_choose"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@+id/tv_register"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/choose" />
    <ImageView
        android:id="@+id/iv_no_choose"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@+id/tv_register"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/no_choose"
        android:visibility="gone"/>

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_register"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/iv_choose"
        android:text="阅读并同意《中纳联平台注册服务协议》"
        android:textColor="@color/text_black"
        android:textSize="10dp" />


</RelativeLayout>