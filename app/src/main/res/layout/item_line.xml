<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f8f8f8"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="90dp"
        android:layout_height="match_parent">

        <com.mango.lib_common.viewBySelf.TextViewCustomTF
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="25"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <com.mango.lib_common.viewBySelf.TextViewCustomTF
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_day"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="12月"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_month"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@color/time_line" />
    </RelativeLayout>

    <com.lijiankun24.shadowlayout.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="start"
        app:shadowColor="#22000000"
        app:shadowRadius="6dp"
        app:shadowShape="rectangle"
        app:shadowSide="all">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_item_bg"
            android:padding="30dp">

            <com.mango.lib_common.viewBySelf.TextViewCustomTF
                android:id="@+id/tv_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016这一年"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <com.mango.lib_common.viewBySelf.TextViewCustomTF
                android:id="@+id/tv_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_title"
                android:layout_marginTop="8dp"
                android:text="2016这一年"
                android:textColor="@color/text_black_1"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_item_image"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_below="@+id/tv_item_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/demo" />

        </RelativeLayout>

    </com.lijiankun24.shadowlayout.ShadowLayout>

</LinearLayout>