<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_project_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/space" />
    
    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:id="@+id/tv_project_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="融资中项目"
        android:textSize="14sp"
        android:layout_below="@+id/space1"
        android:textColor="@color/banner_text_grey"
        android:paddingLeft="15dp"
        android:gravity="center_vertical" />
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_project_title"
        android:background="@color/line"/>

    <ImageView
        android:id="@+id/iv_project_image"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_below="@+id/line1"
        android:layout_margin="15dp"
        android:background="@drawable/demo1"/>
    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:id="@+id/tv_last_time"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:text="剩余时间  2017-3-3  12:30:00"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_below="@+id/line1"
        android:layout_marginTop="101dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/last_time_bg"
        android:visibility="gone"/>
    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:id="@+id/tv_project_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="融资中"
        android:textColor="@android:color/white"
        android:textSize="11sp"
        android:background="@drawable/project_type_bg"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:id="@+id/tv_income_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_project_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:text="分红型"
        android:textSize="11sp"
        android:textColor="@android:color/white"
        android:background="@drawable/income_type_bg" />

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:id="@+id/tv_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_project_image"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="15dp"
        android:text="赖斯美容固定收益有回购大礼相送......"
        android:textColor="@color/text_black"
        android:textSize="14sp" />

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24%"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/iv_project_image"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="31dp" />

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预期年化回报率"
        android:textSize="12sp"
        android:textColor="@color/banner_text_grey"
        android:layout_below="@+id/iv_project_image"
        android:layout_marginTop="76dp"
        android:layout_marginLeft="31dp" />

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12个月"
        android:textSize="17sp"
        android:textColor="@color/text_black"
        android:layout_below="@+id/iv_project_image"
        android:layout_marginTop="46dp"
        android:layout_centerHorizontal="true" />

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目期限"
        android:textSize="12sp"
        android:textColor="@color/banner_text_grey"
        android:layout_below="@+id/iv_project_image"
        android:layout_marginTop="76dp"
        android:layout_centerHorizontal="true" />

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-08-20"
        android:textSize="17sp"
        android:textColor="@color/text_black"
        android:layout_below="@+id/iv_project_image"
        android:layout_marginTop="46dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="31dp" />

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目期限"
        android:textSize="12sp"
        android:textColor="@color/banner_text_grey"
        android:layout_below="@+id/iv_project_image"
        android:layout_marginTop="76dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="68dp"/>
    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/iv_project_image"
        android:layout_marginTop="103dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        app:rcProgress="10"
        app:rcMax="100"
        app:rcRadius="1dp"
        app:rcBackgroundPadding="1dp"
        app:rcReverse="false"
        app:rcProgressColor="@color/colorPrimaryDark"
        app:rcBackgroundColor="@color/line" />

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已融83%"
        android:textSize="12sp"
        android:textColor="@color/black_1"
        android:layout_below="@+id/progressbar"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="23dp" />

    <com.mango.lib_common.viewBySelf.TextViewCustomTF
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="起投1万 | 可投金额 200万元"
        android:textSize="12sp"
        android:textColor="@color/banner_text_grey"
        android:layout_below="@+id/progressbar"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="19dp"/>


</RelativeLayout>